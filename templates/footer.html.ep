                                    <div class="col-md-8">
                                        %= password_field 'password', id => 'modal-account-pass', class => 'form-control'
                                    </div>
                                </div>
                                %= submit_button
                            <% end %>
                        </div>
                        <!-- END Account Tab Content -->

                        <!-- Profile Tab Content -->
                        <div class="tab-pane" id="modal-user-account-profile">
                             <%= form_for register => (method => 'post') => begin %>
                                <div class="form-group">
